<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalExpenses.Pages.Gastos"
             xmlns:viewmodel="clr-namespace:PersonalExpenses.Pages"
             x:DataType="viewmodel:MainViewModel"
             Title="Gastos">
    <VerticalStackLayout>
        <Grid RowDefinitions="Auto"
          ColumnDefinitions=".50*,.30*,.20*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
            <Label Text="Gasto" Grid.Column="0" Grid.Row="1"/>
            <Label Text="Categoria" Grid.Column="1" Grid.Row="1"/>
            <Label Text="Cantidad" Grid.Column="2" Grid.Row="1"/>
            <CollectionView Grid.Column="0" 
                            Grid.Row="1"
                            ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type x:String}">
                        <Frame Grid.Column="0">
                            <Label Text="{Binding .}"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>

    </VerticalStackLayout>

</ContentPage>